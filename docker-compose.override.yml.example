# Docker Compose Override Example
# Copy this file to docker-compose.override.yml để customize local development
# File này sẽ tự động được merge với docker-compose.yml

version: '3.8'

services:
  backend:
    # Override environment variables
    environment:
      NODE_ENV: development
      LOG_LEVEL: debug
    
    # Override volumes để enable hot reload
    volumes:
      - .:/app
      - /app/node_modules
      - ./logs:/app/logs
    
    # Override command để chạy dev mode
    command: npm run dev

